# ============================================
# PROVIDER SELECTION
# ============================================
# Options: aws | openai
PROVIDER=aws
EVAL_MODEL_MAPPING=aws:us.anthropic.claude-sonnet-4-5-20250929-v1:0
MODEL_ID=us.anthropic.claude-sonnet-4-5-20250929-v1:0
AWS_REGION=us-east-1

# ============================================
# AWS BEDROCK GUARDRAILS CONFIGURATION
# ============================================
# Enable/disable guardrails evaluation
GUARDRAILS_ENABLED=true

# Comma-separated list of guardrail IDs to evaluate
# Format: guardrail_id:version,guardrail_id:version
# Example: abc123xyz:1,def456uvw:2
# GUARDRAILS_IDS=your-guardrail-id-1:1,your-guardrail-id-2:DRAFT
GUARDRAILS_IDS=e2794a45e70u:DRAFT

# Guardrails evaluation mode
# Options: input_only | output_only | both
GUARDRAILS_MODE=both

# ============================================
# OPENAI CONFIGURATION
# ============================================
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL_ID=gpt-4

# ============================================
# TEST CONFIGURATION
# ============================================
PROMPT_TEMPLATE_PATH=prompt_templates_enhanced_deepeval.json
OUTPUT_REPORT_PATH=evaluation_reports

# ============================================
# MODEL SETTINGS
# ============================================
MAX_TOKENS=4096
TEMPERATURE=1.0

# ============================================
# REPORT CONFIGURATION
# ============================================
REPORT_FORMAT=pdf
INCLUDE_TIMESTAMP=true
INCLUDE_TOKEN_USAGE=true
